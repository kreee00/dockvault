# :command.version_command
version_command() {
  echo "$version"
}

# :command.usage
dockvault_usage() {
  printf "dockvault - CLI to manage remote vault\n\n"

  printf "%s\n" "Usage:"
  printf "  dockvault COMMAND\n"
  printf "  dockvault [COMMAND] --help | -h\n"
  printf "  dockvault --version | -v\n"
  echo
  # :command.usage_commands
  printf "%s\n" "Commands:"
  printf "  %s   List files in the shared drive\n" "list   "
  printf "  %s   Show hierarchy visual of folders only\n" "folders"
  printf "  %s   Show version information\n" "version"
  echo

  # :command.long_usage
  if [[ -n "$long_usage" ]]; then
    printf "%s\n" "Options:"

    # :command.usage_fixed_flags
    printf "  %s\n" "--help, -h"
    printf "    Show this help\n"
    echo
    printf "  %s\n" "--version, -v"
    printf "    Show version number\n"
    echo

  fi
}

